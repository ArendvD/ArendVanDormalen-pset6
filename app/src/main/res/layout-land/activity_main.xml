<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="arend.arendvandormalen_pset6.MainActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:id="@+id/museum_logo_home"
        android:contentDescription="@string/museum_logo_home_description"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:src="@drawable/rm"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/museum_logo_home"
        android:layout_margin="10dp"
        android:id="@+id/button_container_home"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_button_home"
            android:text="@string/log_in"
            android:onClick="logIn"
            android:layout_margin="30dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/database_button_home"
            android:text="@string/go_to_database"
            android:onClick="toDatabase"
            android:layout_margin="30dp"/>

    </LinearLayout>

</RelativeLayout>
